<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true" />

	<package name="com.internousdev.template2.action" extends="struts-default">

	<action name="HomeAction" class="com.internousdev.template2.action.HomeAction" method="execute">
		<result name="success">login.jsp</result>
	</action>

	<action name="LoginAction" class="com.internousdev.template2.action.LoginAction" method="execute">
		<result name="SUCCESS">buyItem.jsp</result>
		<result name="ERROR">home.jsp</result>
	</action>

	</package>
</struts>